<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Delete sequences" author="Liquibase" runAlways="true" failOnError="false">
        <dropSequence sequenceName="COUNTRY_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="FEATURE_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="HOTEL_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="USER_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="USER_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="TOUR_SEQUENCE" startValue="1" cacheSize="0"/>
        <dropSequence sequenceName="REVIEW_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete tables" author="Liquibase" runAlways="true" failOnError="false">
        <dropTable tableName="COUNTRIES" cascadeConstraints="true"/>
        <dropTable tableName="FEATURES" cascadeConstraints="true"/>
        <dropTable tableName="HOTELS" cascadeConstraints="true"/>
        <dropTable tableName="HOTELS_FEATURES" cascadeConstraints="true"/>
        <dropTable tableName="USERS" cascadeConstraints="true"/>
        <dropTable tableName="TOURS" cascadeConstraints="true"/>
        <dropTable tableName="USERS_TOURS" cascadeConstraints="true"/>
        <dropTable tableName="REVIEWS" cascadeConstraints="true"/>
    </changeSet>

</databaseChangeLog>