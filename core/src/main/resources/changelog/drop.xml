<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Delete COUNTRY_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="COUNTRY_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete FEATURE_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="FEATURE_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete HOTEL_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="HOTEL_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete USER_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="USER_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete TOUR_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="TOUR_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete REVIEW_SEQUENCE" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropSequence sequenceName="REVIEW_SEQUENCE" startValue="1" cacheSize="0"/>
    </changeSet>

    <changeSet id="Delete table COUNTRIES" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="COUNTRIES" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table FEATURES" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="FEATURES" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table HOTELS" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="HOTELS" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table HOTELS_FEATURES" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="HOTELS_FEATURES" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table USERS" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="USERS" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table TOURS" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="TOURS" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table USERS_TOURS" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="USERS_TOURS" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="Delete table REVIEW" author="Liquibase" runAlways="true" runOnChange="true" failOnError="false">
        <dropTable tableName="REVIEWS" cascadeConstraints="true"/>
    </changeSet>

</databaseChangeLog>